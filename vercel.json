{
  "version": 2,
  "name": "venus-recipe-system",
  "builds": [
    {
      "src": "app.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/app.js"
    },
    {
      "src": "/(.*)",
      "dest": "/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "app.js": {
      "maxDuration": 10
    }
  },
  "installCommand": "npm install",
  "buildCommand": "echo 'No build step required for Node.js'",
  "outputDirectory": "",
  "framework": null
}